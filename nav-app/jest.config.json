{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.spec.ts",
    "**/tests/**/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "tests/**/*.ts",
    "!tests/**/*.spec.ts",
    "!tests/**/*.test.ts"
  ],
  "coverageDirectory": "coverage-selenium",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "testTimeout": 60000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.spec.json"
    }
  }
}
